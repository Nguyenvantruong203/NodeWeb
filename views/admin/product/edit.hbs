<div class='page-wrapper' id='main-wrapper' data-layout='vertical' data-navbarbg='skin6' data-sidebartype='full'
  data-sidebar-position='fixed' data-header-position='fixed'>
  <div class='body-wrapper'>
<div class='container-fluid'>
  <div class='card'>
    <div class='card-body'>
      <form action='/product/edit/{{product.id}}' method='post'>
        <h1>Edit Product</h1>
        <div class='form-group'>
          <label for='productName'>Product name:</label>
          <input type='text' class='form-control' name='name' id='productName' value='{{product.name}}' required />
        </div>
        <div class='form-group'>
          <label for='productImage'>Image:</label>
          <input type='url' class='form-control' name='image' id='productImage' value='{{product.image}}' required />
        </div>
        <div class='form-group'>
          <label for='productDetail'>Product detail:</label>
          <input type='text' class='form-control' name='detail' id='productDetail' value='{{product.detail}}' required />
        </div>
        <div class='form-group'>
          <label for='productPrice'>Price:</label>
          <input type='text' class='form-control' name='price' id='productPrice' value='{{product.price}}' required />
        </div>
        <div class='form-group'>
          <label for='productBrand'>Product brand:</label>
          <select class='form-control' name='brand' id='productBrand'>
            {{#each brands}}
            <option value='{{_id}}'>{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class='form-group'>
          <label for='productCategory'>Product category:</label>
          <select class='form-control' name='category' id='productCategory'>
            {{#each categories}}
            <option value='{{_id}}'>{{name}}</option>
            {{/each}}
          </select>
        </div>
        <button type='submit' class='btn btn-primary'>Update</button>
      </form>
    </div>
  </div>
</div>

  </div>
</div>