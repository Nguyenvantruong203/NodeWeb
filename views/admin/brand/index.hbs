<div class='page-wrapper' id='main-wrapper' data-layout='vertical' data-navbarbg='skin6' data-sidebartype='full'
    data-sidebar-position='fixed' data-header-position='fixed'>
    <div class="body-wrapper">
        <div class="container-fluid mt-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Brand Management</h5>
                    <div class="mb-3">
                        <a class="btn btn-info mr-2" href="/brand/add">Add new brand</a>
                        <a class="btn btn-danger" href="/brand/deleteall"
                            onclick="return confirm('Are you sure to delete all brands?');">Delete all</a>
                    </div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Brand Name</th>
                                <th scope="col">Brand Country</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each brands}}
                            <tr>
                                <td>{{ name }}</td>
                                <td>{{ country }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-outline-warning btn-sm" href="/brand/edit/{{ _id }}">Edit</a>
                                        <a class="btn btn-outline-danger btn-sm" href="/brand/delete/{{ _id }}"
                                            onclick="return confirm('Are you sure to delete this brand?');">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>