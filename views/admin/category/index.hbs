<div class='page-wrapper' id='main-wrapper' data-layout='vertical' data-navbarbg='skin6' data-sidebartype='full'
  data-sidebar-position='fixed' data-header-position='fixed'>
  <div class="body-wrapper">
<div class="container-fluid mt-4">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title mb-4">Category Management</h5>
      <div class="mb-3">
        <a class="btn btn-info me-2" href="/category/add">Add new category</a>
        <a class="btn btn-danger" href="/category/deleteall"
          onclick="return confirm('Are you sure you want to delete all categories?');">Delete all</a>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
          <tr>
            <td>{{ name }}</td>
            <td>
              <div class="btn-group" role="group">
                <a class="btn btn-outline-warning btn-sm" href="/category/edit/{{ _id }}">Edit</a>
                <a class="btn btn-outline-danger btn-sm" href="/category/delete/{{ _id }}"
                  onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>


  </div>
</div>